@model Vidly.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<li>@Html.DisplayNameFor(m => m.Genre): @Model.Genre.Name</li>
<li>@Html.DisplayNameFor(m => m.ReleaseDate): @Model.ReleaseDate.ToString("dddd, MMMM dd, yyyy")</li>
<li>@Html.DisplayNameFor(m => m.DateAdded): @Model.DateAdded.ToString("dddd, MMMM dd, yyyy")</li>
<li>@Html.DisplayNameFor(m => m.NumberInStock): @Model.NumberInStock</li>

