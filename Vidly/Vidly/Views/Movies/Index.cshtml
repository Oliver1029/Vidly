@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <p>we don't currently have any movies.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <td>Movie</td>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
        </tbody>    
    </table>    
}